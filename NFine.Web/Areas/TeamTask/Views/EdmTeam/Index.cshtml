    function echart01() {
        var CdatesDeviceName = new Array();//产能设备名
        var CdatesDeviceNumber = new Array();//产能设备数量
        var CdatesColour = new Array();//产能颜色

        var FdatesDeviceName = new Array();//负荷设备名
        var FdatesDeviceNumber = new Array();//负荷设备数量
