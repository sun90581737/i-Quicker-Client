            //        stack: '总量2',
            //        data: [86.5, 92.1, 85.7, 83.1, 73.4, 55.1]
            //    },
            //    {
            //        name: 'GF03',
            //        type: 'line',
            //        smooth: true,
            //        stack: '总量3',
            //        data: [24.1, 67.2, 79.5, 86.4, 65.2, 82.5]
            //    },
            //    {
            //        name: 'GF04',
            //        type: 'line',
            //        smooth: true,
            //        stack: '总量4',
            //        data: [55.2, 67.1, 69.2, 72.4, 53.9, 39.1]
            //    }
            //]
        };
        // 使用刚指定的配置项和数据显示图表。
        myChart.setOption(option);
    }
